{
  "manifest_version": 3,
  "name": "Popup Search",
  "version": "1.0",
  "description": "Search selected text in a popup using a search engine of your choice",
  "permissions": [
    "contextMenus",
    "tabs",
    "windows",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "search-1": {
      "suggested_key": {
        "default": "Alt+1"
      },
      "description": "Search with shortcut 1"
    },
    "search-2": {
      "suggested_key": {
        "default": "Alt+2"
      },
      "description": "Search with shortcut 2"
    },
    "search-3": {
      "suggested_key": {
        "default": "Alt+3"
      },
      "description": "Search with shortcut 3"
    },
    "show-selector": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Show search engine selector"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
} 